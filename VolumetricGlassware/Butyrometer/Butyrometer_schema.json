{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "2023/02/24 @Takao-Nishiwaki",
  "$id": "https://github.com/Nishiwaki-Takao/VolumetricGlassware/blob/master/VolumetricGlassware/Butyrometer/Butyrometer_shema.json",
  "description": "乳脂計(JIS R 3505 / ISO 1769) json schema",
  "title": "Butyrometer.json schema",
  "type": "object",
  "properties": {
    "Butyrometer": {
      "description": "Butyrometer",
      "type": "array",
      "uniquness": true,
      "items": {
        "type": "object",
        "properties": {
          "NominalCapacity": {
            "description": "乳脂計の容量",
            "type": "number",
            "enum": [5, 10, 20, 25, 50, 100, 200, 250, 300, 500, 1000, 2000, 2500, 3000, 5000, 10000 ]
          },
          "CapacityTolerance": {
            "description": "乳脂計の許容誤差",
            "type": "number",
            "minimum": 0.025,
            "maximum": 10,
            "anyOf": [ { "multipleOf": 0.025 }, { "multipleOf": 0.02 }, { "multipleOf": 0.04 }, { "multipleOf": 0.05 }, { "multipleOf": 0.06 }, { "multipleOf": 0.08 }, { "multipleOf": 0.1 }, { "multipleOf": 0.12 }, { "multipleOf": 0.15 }, { "multipleOf": 0.2 }, { "multipleOf": 0.25 }, { "multipleOf": 0.3 }, { "multipleOf": 0.4 }, { "multipleOf": 0.6 }, { "multipleOf": 1.5 }, { "multipleOf": 2.0 }, { "multipleOf": 2.0 }, { "multipleOf": 5.0 } ]
            },
          "Class": {
            "description": "乳脂計の等級",
            "type": "string",
            "enum": [ "A", "B", "SuperGrade", "HighGrade" ]
          }
           }
          }
         }
        }
      }
    }
  }
}